<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sictiy.common.db.mapper.JPlayerMapper">
    
    <select id="queryJPlayerByUserId" resultType="com.sictiy.common.db.pojo.JPlayerInfo">
        select * from u_player where userId = #{userId}
    </select>
    
    <select id="queryJPlayerAll" resultType="com.sictiy.common.db.pojo.JPlayerInfo">
        select * from u_player
    </select>

    <insert id="insertJPlayer" useGeneratedKeys="true" keyColumn="userId" keyProperty="userId"
            parameterType="com.sictiy.common.db.pojo.JPlayerInfo">
        INSERT INTO u_player (
                userId,
                sex,
                icon
            )
        VALUES (
                #{userId},
                #{sex},
                #{icon}
            );
    </insert>

    <update id="updateJPlayer" parameterType="com.sictiy.common.db.pojo.JPlayerInfo">
        UPDATE u_player
        <trim prefix="set" suffixOverrides=",">
                    <if test="sex!=null">sex = #{sex},</if>
                    <if test="icon!=null">icon = #{icon},</if>
        </trim>
        WHERE
        (userId = #{userId});
    </update>
</mapper>